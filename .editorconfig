root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
indent_size = 2
trim_trailing_whitespace = true
quote_type = single

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[{*.yaml,*.yml}]
quote_type = single

[{*.json}]
quote_type = double

[*.{js,jsx,ts,tsx,cjs,mjs,css,html}]
end_of_line = lf

[src/components/**]
generated_code = true
